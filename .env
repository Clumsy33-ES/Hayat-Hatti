ENV=dev
API_PREFIX=/api

JWT_SECRET=change-me
JWT_EXPIRES_MIN=60

# PostgreSQL bağlantısı:
# Örnek yerel:
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/afet
# Örnek bulut (Neon vb.):
# DATABASE_URL=postgresql+asyncpg://<user>:<pass>@<host>/<db>
# Uygulama (async) için:
DATABASE_URL=postgresql+asyncpg://postgres:firdevs64@localhost:5432/hayat_hatti_offline

# Alembic (senkron) için - mig. çalıştıracaksan:
DATABASE_SYNC_URL=postgresql://postgres:firdevs64@localhost:5432/hayat_hatti_offline


# MongoDB Atlas (örnek):
# mongodb+srv://KULLANICI:PAROLA@CLUSTER.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://KULLANICI:PAROLA@CLUSTER.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=afet

CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT=60/minute
